    "@types/node": "^22.15.3",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.3",
    "@types/serviceworker": "^0.0.133",
    "@types/w3c-web-serial": "^1.0.8",
    "@types/web-bluetooth": "^0.0.21",
    "@vitejs/plugin-react": "^4.4.1",
    "autoprefixer": "^10.4.21",
    "gzipper": "^8.2.1",
    "happy-dom": "^17.4.6",
    "postcss": "^8.5.3",
    "simple-git-hooks": "^2.13.0",
    "tailwind-merge": "^3.2.0",
