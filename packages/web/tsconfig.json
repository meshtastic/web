{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": false,
    "types": [
      "vite/client",
      "node",
      "@types/w3c-web-serial",
      "@types/web-bluetooth"
    ],
    "baseUrl": ".",
    "paths": {
      "@app/*": ["./src/*"],
      "@public/*": ["./public/*"],
      "@core/*": ["./src/core/*"],
      "@layouts/*": ["./src/layouts/*"],
      "@db/*": ["./src/db/*"],
      "@validation/*": ["./src/validation/*"],
      "@shared/*": ["./src/shared/*"],
      "@features/*": ["./src/features/*"],
      "@state/*": ["./src/state/*"],
      "@data/*": ["./src/data/*"]
    }
  },
  "include": ["src", ".d.ts"],
  "exclude": [
    "routeTree.gen.ts",
    "node_modules",
    "dist",
    "build",
    "coverage",
    "out",
    ".vscode-test"
  ]
}
