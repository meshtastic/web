{
 "$schema": "https://biomejs.dev/schemas/2.0.5/schema.json",
	"files": {
 		"includes": ["**", "!node_modules/**", "!**/*.css", "!dist/**", "!build/**", "!coverage/**", "!**/*.d.ts"],
		"ignoreUnknown": false
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": false,
		"indentStyle": "space",
		"indentWidth": 2,
		"lineWidth": 80,
		"attributePosition": "auto"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noExplicitAny": "error",
				"noDebugger": "error"
			},
			"style": {
				"useConst": "error",
				"useBlockStatements": "error",
				"useSingleVarDeclarator": "off"
			},
			"complexity": {
				"noForEach": "off"
			},
			"correctness": {
				"noUnusedVariables": "error",
				"noUnusedImports": "error"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double",
			"semicolons": "always"
		}
	},
	"json": {
		"formatter": {
			"indentStyle": "space",
			"indentWidth": 2
		}
	}
}
